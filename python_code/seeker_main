def on_button_pressed_a():
    global answer
    answer = answer - 1
    if answer < 0:
        answer = len(options) - 1
    basic.show_string("" + (options[answer]))
input.on_button_pressed(Button.A, on_button_pressed_a)

def on_button_pressed_ab():
    radio.send_string("" + (options[answer]))
input.on_button_pressed(Button.AB, on_button_pressed_ab)

def on_received_string(receivedString):
    global options, answer
    if receivedString == "T/F":
        options = ["T", "F"]
        basic.show_string("T")
        answer = 0
    elif receivedString == "M":
        options = ["A", "B", "C", "D"]
        basic.show_string("A")
        answer = 0
    else:
        basic.show_string("Err")
radio.on_received_string(on_received_string)

def on_button_pressed_b():
    global answer
    answer = answer + 1
    if answer >= len(options):
        answer = 0
    basic.show_string("" + (options[answer]))
input.on_button_pressed(Button.B, on_button_pressed_b)

answer = 0
options: List[str] = []
radio.set_group(1)
options = []
seeker_id = 1
basic.show_string("S" + str(seeker_id))
basic.pause(200)
basic.clear_screen()